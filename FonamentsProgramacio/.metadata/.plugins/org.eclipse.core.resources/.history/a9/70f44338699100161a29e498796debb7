package Exercici4;

import Keyboard.*;

public class Exercici4 {
	public static void main (String args[]) {
		double costatpetitcm;
		double costatpetitpolzades;
		double costatgrancm;
		double costatgranpolzades;
		double diagonalpolzades;
		double diagonalcm;
		
		System.out.println("MIDES D'UNA PANTALLA DE TELEVISOR");
		System.out.println("***** * *** ******** ** *********");
		System.out.println();
		System.out.print("Quina és la mida en polzades de la diagonal? ");
		
		diagonalpolzades = Keyboard.readDouble();
		costatpetitpolzades = diagonalpolzades * 0.49;
		costatgranpolzades = diagonalpolzades * 0.49 * 16 / 9;
		
		diagonalcm = Math.round(diagonalpolzades * 2.54);
		costatpetitcm = Math.round(costatpetitpolzades * 2.54);
		costatgrancm = Math.round(costatgranpolzades * 2.54);
		
		System.out.println();
		System.out.print("Un televisor de ");
		System.out.print(diagonalpolzades);
		System.out.print(" polzades (");
		System.out.print(diagonalcm);
		System.out.println(" centimetres)");
		
		System.out.print("te un costat petit de ");
		System.out.print(costatpetitcm);
		System.out.print(" centímetres (");
		System.out.print(costatpetitpolzades);
		System.out.println(" polzades)");
		
		System.out.print("i un costat gran de ");
		System.out.print(costatgrancm);
		System.out.print(" centímetres (");
		System.out.print(costatgranpolzades);
		System.out.println(" polzades)");
	}
}