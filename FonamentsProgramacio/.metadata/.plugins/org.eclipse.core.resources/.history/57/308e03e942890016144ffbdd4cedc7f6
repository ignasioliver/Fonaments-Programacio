package Exercici5;

import Keyboard.*;

public class Exercici5 {
	public static void main(String args[]){
		int edatp1;
		int edatp2;
		int edatp3;
		int edatp4;
		double mitja;
		System.out.println("Especifica l'edat de les 4 persones");
		System.out.println("-----------------------------------");
		System.out.print("Persona 1 - Quants anys te? ");
		edatp1 = Keyboard.readInt();
		System.out.print("Persona 2 - Quants anys te? ");
		edatp2 = Keyboard.readInt();
		System.out.print("Persona 3 - Quants anys te? ");
		edatp3 = Keyboard.readInt();
		System.out.print("Persona 4 - Quants anys te? ");
		edatp4 = Keyboard.readInt();
		mitja = (edatp1 + edatp2 + edatp3 + edatp4)/4;
		System.out.print("Edat mitjana es: ");
		System.out.print("mitja");
	}
}
