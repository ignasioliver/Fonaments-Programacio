package Exercici2;

import Keyboard.*;

public class Exercici2 {
	public static void main (String args[]) {
		double base;
		double alcada;
		System.out.println("Quina és la base?");
		base = Keyboard.readDouble();
		System.out.println("Quina és l'alçada?");
		alcada = Keyboard.readDouble();
		System.out.println("***PROGRAMA ÀREA TRIANGLE***");
		System.out.println("Mida de la base: ");
		System.out.println(base);
		System.out.println("Mida de l'alçada: ");
		System.out.println(alcada);
		System.out.println("L'àrea del triangle es: ");
		System.out.println((base * alcada) / 2);
	}
}