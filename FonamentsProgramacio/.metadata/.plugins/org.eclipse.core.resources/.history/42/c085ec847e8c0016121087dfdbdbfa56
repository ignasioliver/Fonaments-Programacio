package Exercici7;

import Keyboard.*;

public class Exercici7 {
	public static void main(String args[]){
		int hores;
		int minuts;
		int segons;
		System.out.println("Especifica el numero de hores");
		System.out.println("-----------------------------");
		segons = Keyboard.readInt();
		System.out.println("Especifica el numero de hores");
		System.out.println("-----------------------------");
		minuts = Keyboard.readInt();
		System.out.println("Especifica el numero de hores");
		System.out.println("-----------------------------");
		hores = Keyboard.readInt();
		System.out.println(hores);
		System.out.println("h -");
		System.out.println(minuts);
		System.out.println("' -");
		System.out.println(segons);
		System.out.println("'' son : ");
		System.out.println(hores*3600 + minuts*60 + segons*60);
		System.out.println("''");
	}
}
