package Exercici9;

import Keyboard.*;

public class Exercici9 {
	public static void main(String args[]){
		int valor, resultat, residu, resultat2, resultat3, resultat4, resultat5, resultat6;
		System.out.println("Especifica una quantitat");
		System.out.println("------------------------");
		valor = Keyboard.readInt();
		resultat = valor/20000;
		residu = valor%20000;
		
		System.out.println(resultat + " Bitllets de 20000 colons");
		resultat = residu/1000;
		residu = resultat%1000;
		
		System.out.println(resultat + " Bitllets de 1000 colons");
		resultat2 = residu/500;
		residu = resultat2%500;
		
		System.out.println(resultat + " Monedes de 500 colons");
		resultat3 = residu/100;
		residu = resultat3%100;
		
		System.out.println(resultat + " Monedes de 25 colons");
		resultat4 = residu/25;
		residu = resultat4%25;
		
		System.out.println(resultat + " Monedes de 10 colons");
		resultat5 = residu/10;
		residu = resultat5%10;
		
		System.out.println(resultat + " Monedes de 1 colons");
		resultat6 = residu/1;
		residu = resultat6%1;
	}
}
