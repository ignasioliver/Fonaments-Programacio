package Exercici3;

import Keyboard.*;

public class Exercici3 {
	public static void main (String args[]) {
		double hEnKm;
		double TempsTerra, TempsLluna;
		double TrencatTerra, TrencatLluna;
	    System.out.println();
	    System.out.println("TEMPS DE CAIGUDA D'UN SÒLID (sense fregament)");
	    System.out.println("----- -- ------- ---- -----");
	    System.out.println();
	    System.out.print("Alçada inicial (en km): ");
	    hEnKm = Keyboard.readDouble();
	    TrencatTerra = (hEnKm * 1000 * 2) / 9.8;
	    TrencatLluna = (hEnKm * 1000 * 2) / 1.6;
	    TempsTerra = Math.sqrt(TrencatTerra);
	    TempsLluna = Math.sqrt(TrencatLluna);
	    TempsTerra = Math.round(TempsTerra);
	    TempsLluna = Math.round(TempsLluna);
	    System.out.println();
	    System.out.print("Un objecte llencat des de ");
	    System.out.print(hEnKm * 1000);
	    System.out.println(" metres");
	    System.out.print("trigarà  en arribar a la superfície ");
	    System.out.print(TempsTerra);
	    System.out.println(" segons, si és a la Terra");
	    System.out.print("però a la lluna trigarà  ");
	    System.out.print(TempsLluna);
	    System.out.println(" segons.");
	    System.out.println();
	}
}