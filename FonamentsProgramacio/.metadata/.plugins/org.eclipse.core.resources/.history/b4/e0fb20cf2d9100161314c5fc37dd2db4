package Exercici9_prova;

import Keyboard.*;

public class Exercici9_prova2 { 
	// fer els ifs i que en cas que surti 0 no imprimeixi res
	public static void main(String args[]){
		int valor, resultat;
		System.out.println("Especifica una quantitat");
		System.out.println("------------------------");
		valor = Keyboard.readInt();
		resultat = valor / 20000; //part entera
		valor = valor % 20000;//ara necessitem saber el residu (la part decimal)
		if (valor != 0){ System.out.println(resultat + " Bitllets de 20000 colons");}
		resultat = valor / 1000;
		valor = valor % 1000;
		System.out.println(resultat + " Bitllets de 1000 colons");
		resultat = valor / 500;
		valor = valor % 500;
		if (resultat != 0){System.out.println(resultat + " Monedes de 500 colons");} else {System.out.println("RES");}
		resultat = valor / 100;
		valor = valor % 100;
		System.out.println(resultat + " Monedes de 100 colons");
		resultat = valor / 25;
		valor = valor % 25;
		System.out.println(resultat + " Monedes de 25 colons");
		resultat = valor / 10;
		valor = valor % 10;
		System.out.println(resultat + " Monedes de 10 colons");
		resultat = valor / 1;
		valor = valor % 1;
		System.out.println(resultat + " Monedes de 1 colon");
	}
}
