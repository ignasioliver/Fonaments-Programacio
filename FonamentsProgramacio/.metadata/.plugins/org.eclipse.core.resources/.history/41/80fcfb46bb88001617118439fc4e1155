	    TempsTerra = Math.round(TempsTerra);
	    TempsLluna = Math.round(TempsLluna);
	    System.out.println();
	    System.out.print("Un objecte llencat des de");
	    System.out.print(hEnkm*1.000);
	    System.out.print("metres");
