package Exercici7;

import Keyboard.*;

public class Exercici7 {
	public static void main(String args[]){
		int hores;
		int minuts;
		int segons;
		System.out.println("Especifica el numero de hores");
		System.out.println("-----------------------------");
		hores = Keyboard.readInt();
		System.out.println("Especifica el numero de hores");
		System.out.println("-----------------------------");
		minuts = Keyboard.readInt();
		System.out.println("Especifica el numero de hores");
		System.out.println("-----------------------------");
		segons = Keyboard.readInt();
		System.out.print(hores);
		System.out.print("h -");
		System.out.print(minuts);
		System.out.print("' -");
		System.out.print(segons);
		System.out.print("'' son : ");
		System.out.print((hores*3600) + (minuts*60) + (segons));
		System.out.print("''");
	}
}
